# Configurações do Sistema de Chamados TI - SOTRIGO
# Copie este arquivo para .env e configure as variáveis

# Oracle Database
DB_USER=SEU_USUARIO
DB_PASSWORD=SUA_SENHA
DB_HOST=IP_DO_SERVIDOR
DB_PORT=1521
DB_SERVICE=NOME_SERVICE

# Oracle Client
ORACLE_CLIENT=C:\oracle\instantclient_23_0

# Pool de Conexões
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_INCREMENT=1

# Flask (Web)
FLASK_SECRET_KEY=gere-uma-chave-segura-aqui
FLASK_DEBUG=false

# Servidor de Anexos
SERVIDOR_REDE=\\SERVIDOR\Compartilhamentos
ANEXOS_DIR=\\SERVIDOR\Compartilhamentos\imagens_chamados

# Usuários TI (matrículas separadas por vírgula)
USUARIOS_TI=14
USUARIOS_GERENCIA=14

# SLA Cores
COR_SLA_OK=#22c55e
COR_SLA_ATENCAO=#f59e0b
COR_SLA_ATRASADO=#ef4444
COR_SLA_FINALIZADO=#6b7280
COR_SLA_SEM=#9ca3af

# Auto-refresh (segundos, 0 = desativado)
AUTO_REFRESH_INTERVAL=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=chamados_ti.log
